{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build schulaufgaben && ng build editor && ng build client",
    "watch": "npm-run-all --parallel watch:schulaufgaben watch:editor watch:client",
    "watch:schulaufgaben": "ng build schulaufgaben --watch --configuration development",
    "watch:client": "ng build client --watch --configuration development",
    "watch:editor": "ng build editor --watch --configuration development",
    "serve:client": "ng serve client --configuration development --port 4200",
    "serve:editor": "ng serve editor --configuration development --port 4201",
    "dev": "npm-run-all --parallel watch:schulaufgaben serve:editor serve:client",
    "test": "ng test",
    "orval": "npx orval"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/material": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@types/jasmine": "~5.1.13",
    "jasmine-core": "~5.12.1",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.0.0",
    "orval": "^8.0.0-rc.2",
    "typescript": "~5.9.3"
  },
  "overrides": {
    "zod": "^4.1.12",
    "js-yaml": "^4.1.1"
  }
}
